---
import itemTwo from '../assets/ItemTwo.webp';
---

<div id="cart" class="fixed  transition duration-300 translate-x-[100%]  top-0 right-0  z-40 flex h-screen w-screen overscroll-none bg-[#00000040] p-[15px]">
	<div class="h-full w-full   md:w-[568px] md:ml-auto rounded-[15px] bg-white flex flex-col justify-between">
		<div class="p-[40px]">
			<div class="flex items-center">
				<p class="font-poppins text-[20px] font-bold">Cart</p>
				<div
					class="ml-[10px] flex h-[25px] w-[25px] items-center justify-center rounded-full bg-[#39135e]"
				>
					<p class="text-white">1</p>
				</div>
				<svg
					id="closeCart"
					class="ml-auto h-[20px] w-[20px] cursor-pointer"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 384 512"
				>
					<path
						fill="#000000b3"
						d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"
					></path></svg
				>
			</div>
			<p class="mt-[10px] font-lora font-[18px] font-[500] text-[#1a1a1a]">
				You are eligible for free shipping.
			</p>
            <div class="border-[3px] mt-[20px]   rounded-full  border-[#39135e]">

            </div>
			<div class="mt-[40px] flex ">
                <img src={itemTwo.src} class="w-[100px] mr-[10px] rounded-[10px] " />
                <div>
                    <p class="text-[18px] font-bold">A2 Desi Cow Ghee</p>
                    <p class="text-[14px]">Rs. 3,299.00</p>
                </div>
                <p class="ml-auto text-[#1a1a1a80] text-[14px] cursor-pointer underline">Remove</p>

            </div>
		</div>
        <div class="border-t-[1.5px] p-[40px] border-[#1a1a1a50]">
                <div class="flex justify-between items-center">
                    <p class="font-bold text-[25px]">Total</p>
                    <p class="font-bold text-[25px]">Rs. 3,299.00</p>
                </div>
                <div class="flex font-lora justify-between gap-[20px] items-between mt-[20px]">
                    <a href="/Cart" class=" text-white px-[40px] py-[18px] rounded-full w-[50%] text-[18px] font-bold bg-[#39135e] text-center">
                        View Cart
                    </a>
                    <a class=" font-lora text-white px-[40px] py-[18px] rounded-full w-[50%] text-[18px] font-bold bg-[#39135e] text-center">
                        Checkout
                    </a>
                </div>
        </div>
	</div>
</div>

<script>

</script>

<script>
    const cancelCart = document.getElementById('closeCart');
    const cart = document.getElementById('cart');
    const cartIcon= document.getElementById('cartIcon')
   console.log('dere')

    cartIcon?.addEventListener('click', function () {		
        cart?.classList.remove('translate-x-[100%]');
        cart?.classList.add('translate-x-0');
        
    });

    

    cancelCart?.addEventListener('click', function () {
        
        cart?.classList.add('translate-x-[100%]');
        cart?.classList.remove('translate-x-0');
  

    });

</script>